{% extends 'base.html.twig' %}

{% block title %}{{ article.seoTitle }}{% endblock %}
{% block seo_description %}{{ article.seoDescription }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link>
    <link rel="stylesheet" href="{{ asset('stylesheets/elements/page_title_with_breadcrumbs.css') }}">
    <link rel="stylesheet" href="{{ asset('stylesheets/blog/about_us.css') }}">
{% endblock %}
{% block body %}
    {% include 'elements/header.html.twig' %}
    {% include 'elements/page_title_with_breadcrumbs.html.twig' %}
    <div class="content_wrapper">
        <img src="{{ article.image }}">
        <div class="text">
        {{ article.description|raw }}
        </div>
    </div>
    {% include 'elements/footer.html.twig' %}
{% endblock %}
