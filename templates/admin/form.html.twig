{% extends 'admin/base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" href="/admin/css/custom.css">
{% endblock %}

{% block preloader %}
    <div class="page-overflow" id="preloader">
        <div class="lds-ripple"><div></div><div></div></div>
    </div>
{% endblock %}

{% block body %}
    <div class="container-fluid px-xl-5">
        <section class="py-5">
            <div class="row">
                {{ form_start(form) }}
                <div class="accordion" id="accordionExample" style="width: 100%; margin-bottom: 1rem;">
                    <div class="card">
                        <div class="card-header" id="headingOne" style="background-color: #4680ff">
                            <h2 class="mb-0">
                                <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                    Русский
                                </button>
                            </h2>
                        </div>

                        <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
                            <div class="card-body">
                            </div>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-header" id="headingTwo" style="background-color: #4680ff">
                            <h2 class="mb-0">
                                <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                    Английский
                                </button>
                            </h2>
                        </div>
                        <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionExample">
                            <div class="card-body">
                            </div>
                        </div>
                    </div>
                </div>
                {{ form_end(form) }}

            </div>
        </section>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>
    <script>
        let tooltips = [];
        {% if tooltips is defined %}
            tooltips = {{ tooltips|json_encode|raw }};
        {% endif %}
    </script>
    <script src="/admin/js/ckeditor.js"></script>
    <script src="/admin/js/form.js"></script>
{% endblock %}