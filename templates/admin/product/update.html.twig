{% extends 'admin/form.html.twig' %}

{% block body %}
    <div class="container-fluid px-xl-5">
        <section class="py-5">
            <div class="row">
                {{ form_start(form) }}
                <div class="accordion" id="accordionExample" style="width: 100%; margin-bottom: 1rem;">
                    <div class="card">
                        <div class="card-header" id="headingOne" style="background-color: #4680ff">
                            <h2 class="mb-0">
                                <button class="btn btn-link" type="button" data-toggle="collapse"
                                        data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                    Русский
                                </button>
                            </h2>
                        </div>

                        <div id="collapseOne" class="collapse show" aria-labelledby="headingOne"
                             data-parent="#accordionExample">
                            <div class="card-body">
                            </div>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-header" id="headingTwo" style="background-color: #4680ff">
                            <h2 class="mb-0">
                                <button class="btn btn-link collapsed" type="button" data-toggle="collapse"
                                        data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                    Английский
                                </button>
                            </h2>
                        </div>
                        <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo"
                             data-parent="#accordionExample">
                            <div class="card-body">
                            </div>
                        </div>
                    </div>
                </div>
                <div id="specifications">
                    <div class="row">
                        <a type="button" data-toggle="modal" data-target="#myModal" class="btn btn-primary">Добавить
                            характеристику</a>
                    </div>
                    <div class="card-body">
                        <table class="table card-text table-responsive">
                            <thead>
                            <tr>
                                <th>Характеристика</th>
                                <th>Название на английском</th>
                                <th>Название на русском</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody id="specification-rows">
                            {% for productSpecification in productSpecifications %}
                                <tr class="specification-row">
                                    <th>
                                        <select class="specification-select" style="width: 100%">
                                            {% for specification in specifications %}
                                                <option {% if specification.id == productSpecification.id %}selected{% endif %}
                                                        value="{{ specification.id }}">{{ specification.name }}</option>
                                            {% endfor %}
                                        </select>
                                    </th>
                                    <th>
                                        <input required="required" class="form-control english-value" value="{{ productSpecification.en }}">
                                    </th>
                                    <th>
                                        <input required="required" class="form-control russian-value" value="{{ productSpecification.ru }}">
                                    </th>
                                    <th>
                                        <a class="btn btn-primary {% if loop.last %}add-specification-row">Добавить характеристику{% else %}remove-specification-row">Удалить характеристику{% endif %}</a>
                                    </th>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                {{ form_end(form) }}

            </div>
        </section>
    </div>

    <div id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true"
         class="modal fade text-left">
        <div role="document" class="modal-dialog" style="margin-top: 20%;">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 id="exampleModalLabel" class="modal-title">Добавление характеристики</h4>
                    <button type="button" data-dismiss="modal" aria-label="Close" class="close"><span
                                aria-hidden="true">×</span></button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <input id="specification_add_en" placeholder="Название на английском" class="form-control">
                    </div>
                    <div class="form-group">
                        <input id="specification_add_ru" placeholder="Название на русском" class="form-control">
                    </div>
                    <div class="form-group">
                        <button id="save_specification" class="btn btn-primary">Добавить</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="/admin/js/specification.js"></script>
{% endblock %}

